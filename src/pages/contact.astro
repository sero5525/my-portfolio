---
// src/pages/contact.astro
---

<html lang="ja">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Contact | Artist Portfolio</title>
	</head>
	<body class="bg-black text-white min-h-screen p-8">

		<header class="mb-16">
			<a href="/" class="font-bold tracking-widest text-sm hover:text-gray-400 transition-colors">
				&larr; ARTIST NAME
			</a>
		</header>

		<main class="max-w-xl mx-auto mt-20 space-y-16">
			
			<section>
				<h2 class="text-xs text-gray-500 mb-6 tracking-widest">INQUIRIES</h2>
				<a href="mailto:contact@your-domain.com" class="text-2xl md:text-3xl font-bold tracking-wide hover:text-gray-400 transition-colors border-b border-gray-800 pb-2 inline-block">
					info@asairo.jp
                </a>
			</section>

			<section>
				<h2 class="text-xs text-gray-500 mb-6 tracking-widest">FOLLOW ME</h2>
				<ul class="space-y-4">
					<li>
						<a href="#" class="flex items-center group">
							<span class="w-24 text-gray-500 text-sm">X (Twitter)</span>
							<span class="text-white group-hover:text-gray-400 transition-colors">@your_account &rarr;</span>
						</a>
					</li>
					<li>
						<a href="#" class="flex items-center group">
							<span class="w-24 text-gray-500 text-sm">YouTube</span>
							<span class="text-white group-hover:text-gray-400 transition-colors">Official Channel &rarr;</span>
						</a>
					</li>
				</ul>
			</section>

			<footer class="pt-12 border-t border-gray-900 text-center">
				<p class="text-xs text-gray-700">
					&copy; 2025 asairo
				</p>
			</footer>

		</main>

	</body>
</html>